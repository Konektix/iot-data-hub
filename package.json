{
  "name": "iot-data-hub",
  "version": "1.0.0",
  "description": "Core service for transit and storage of IoT data",
  "main": "index.js",
  "scripts": {
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "prisma": "npx prisma migrate deploy",
    "build": "tsc -p tsconfig.build.json",
    "start": "npm run prisma && npm run build && node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "jest",
    "lint": "eslint . --fix",
    "test:int": "chmod +x scripts/* && ./scripts/run-integration.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Konektix/iot-data-hub.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Konektix/iot-data-hub/issues"
  },
  "homepage": "https://github.com/Konektix/iot-data-hub#readme",
  "devDependencies": {
    "@prisma/client": "^6.9.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@tsconfig/node22": "^22.0.2",
    "body-parser": "^2.2.0",
    "express": "^5.1.0"
  }
}
